{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block main %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ team.description }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ team.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Characters</th>
                <ul>
                    <td>
                    {% for character in team.characters %}
                    <li>
                        <a href="{{ path('app_team_character_show', {'team_id': team.id, 'character_id' : character.id}) }}">{{ character }}</a>
                    </li>                
                    {% endfor %}
                    </td>
                </ul>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_team_index') }}">Back to list</a>

    <a href="{{ path('app_team_edit', {'id': team.id}) }}">Edit</a>

    {{ include('team/_delete_form.html.twig') }}
{% endblock %}
