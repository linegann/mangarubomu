{% extends 'base.html.twig' %}

{% block title %}Liste des Teams{% endblock %}

{% block main %}
    <h1>Les ptites Ã©quipes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Published</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.description }}</td>
                <td>{{ team.published ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_team_show', {'id': team.id}) }}">show</a>
                    <a href="{{ path('app_team_edit', {'id': team.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_team_new') }}">Create new</a>
{% endblock %}
