<table class="table">
    <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Album</th>
        <th>Manga</th>
    </thead>

    <tbody>
        <td>{{ character.id }}</td>
        <td>{{ character.name }}</td>
        <td>{{ character.gender }}</td>
        <td>
            {% if character.album is not same as(null) %}
                <a href="{{ path('album_show', {'id': character.album.id }) }}">{{ character.album }}
            {% else %}
                Not in any album
            {% endif %}
        </td>
        <td>{{ character.manga|join(', ') }}</td>
    </tbody>

</table>

