{% extends 'base.html.twig' %}

{% block title %}Membre{% endblock %}

{% block main %}
    <h1>Membre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ membre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ membre.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ membre.description }}</td>
            </tr>
            <tr>
                <th>Albums</th>
                <td>
                    {% for album in membre.albums %}
                    <li><a href="{{ path('album_show', {'id' : album.id}) }}">{{ album }}</a></li>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_membre_index') }}">Back to Member list</a>

    <a href="{{ path('app_membre_edit', {'id': membre.id}) }}">Edit</a>

    <a href="{{ path('app_album_new', {'id': membre.id}) }}">Add new Album</a>

    {{ include('membre/_delete_form.html.twig') }}
{% endblock %}
