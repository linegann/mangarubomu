{% extends 'base.html.twig' %}

{% block title %}Liste des Albums{% endblock %}

{% block main %}

<h1>Check moi ça frérot</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Membre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for album in albums %}
        <tr>
            <td>{{ album.id }}</td>
            <td>{{ album.title }}</td>
            <td>{{ album.membre }}</td>
            <td>
                 <a href="{{ path('album_show', {'id': album.id}) }}">show</a>
                <a href="{{ path('app_album_edit', {'id': album.id}) }}">Edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_album_new') }}">Create new</a>

{% endblock %} {# body #}